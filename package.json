{
  "name": "beyond-the-build",
  "private": true,
  "scripts": {
    "build": "npm run typegen && next build && sanity manifest extract --path public/studio/static",
    "predev": "npm run typegen",
    "clean": "bash -c 'rm -rf .next .turbo node_modules/.cache .vercel/output'",
    "dev": "next --turbopack",
    "dev2": "next dev",
    "format": "npx prettier --write . --ignore-path .gitignore",
    "lint": "next lint .",
    "lint:fix": "npm run format && npm run lint -- --fix",
    "start": "next start",
    "sanity-build": "sanity build",
    "sanity-deploy": "sanity deploy",
    "type-check": "tsc --noEmit",
    "typegen": "sanity schema extract && sanity typegen generate",
    "install-commitizen": "git config --local commitizen.path './node_modules/.bin/cz'",
    "install-husky": "husky && git config core.hooksPath .husky",
    "prepare": "npm run install-husky && npm run install-commitizen"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@next/env": "16.1.2",
    "@sanity/client": "7.14.0",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "2.0.2",
    "@sanity/react-loader": "^2.0.5",
    "@sanity/ui": "^3.1.11",
    "@sanity/vision": "^5.4.0",
    "@sanity/visual-editing": "^5.1.0",
    "@tailwindcss/typography": "0.5.19",
    "classnames": "2.5.1",
    "date-fns": "4.1.0",
    "next": "16.1.2",
    "next-sanity": "^12.0.12",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "react-live-transitions": "0.2.0",
    "rxjs": "7.8.2",
    "sanity": "^5.4.0",
    "sanity-plugin-asset-source-unsplash": "7.0.2",
    "server-only": "0.0.1",
    "sonner": "2.0.7",
    "styled-components": "6.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "beta",
    "commitizen": "^4.3.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "^9.1.7",
    "postcss": "8.5.6",
    "prettier": "3.8.0",
    "prettier-plugin-packagejson": "2.5.21",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "@digitalroute/cz-conventional-changelog-for-jira"
    }
  }
}
