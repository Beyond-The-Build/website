{
  "name": "beyond-the-build",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "next clean",
    "dev": "next --turbopack",
    "dev2": "next dev",
    "format": "npx prettier --write . --ignore-path .gitignore",
    "lint": "next lint .",
    "lint:fix": "npm run format && npm run lint -- --fix",
    "start": "next start",
    "sanity-build": "sanity build",
    "sanity-deploy": "sanity deploy",
    "type-check": "tsc --noEmit",
    "install-commitizen": "git config --local commitizen.path './node_modules/.bin/cz'",
    "install-husky": "husky && git config core.hooksPath .husky",
    "prepare": "npm run install-husky && npm run install-commitizen"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@next/env": "15.3.2",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "1.1.0",
    "@sanity/react-loader": "^1.11.9",
    "@sanity/ui": "^2.15.17",
    "@sanity/vision": "^3.88.3",
    "@tailwindcss/typography": "0.5.16",
    "classnames": "2.5.1",
    "date-fns": "4.1.0",
    "next": "15.3.2",
    "next-sanity": "^9.11.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "rxjs": "7.8.2",
    "sanity": "^3.88.3",
    "sanity-plugin-asset-source-unsplash": "3.0.3",
    "server-only": "0.0.1",
    "styled-components": "6.1.18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "^9.1.7",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-packagejson": "2.5.13",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.7",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "@digitalroute/cz-conventional-changelog-for-jira"
    }
  }
}
